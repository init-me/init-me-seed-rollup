{
  "version": "0.1.0",
  "main": "output/index.js",
  "module": "output/index.esm.js",
  "types": "output/index.d.ts",
  "eslintConfig": {
    "env": {
      "jest": true
    },
    "extends": [
      "yyl-react"
    ]
  },
  "eslintIgnore": [
    "/node_modules",
    "/output",
    "/test"
  ],
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "quoteProps": "consistent",
    "trailingComma": "none",
    "printWidth": 100
  },
  "scripts": {
    "eslint": "eslint --ext=jsx,ts,tsx ./",
    "prettier": "prettier --write ./**",
    "dev": "rollup --config ./rollup.config.js",
    "d": "rollup --config ./rollup.config.js",
    "build": "cross-env NODE_ENV=production rollup --config ./rollup.config.js",
    "w": "rollup --watch --config ./rollup.config.js",
    "clear": "rimraf ./output",
    "release": "yyr",
    "prepublishOnly": "npm run prettier & npm run build", 
    "test": "cd ./test/case/base && npm run d",
    "install:test": "cd ./test/case/base && yarn install"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^14.1.0",
    "@yy/serve-yyl-ssr": "^0.4.0",
    "@yy/yyl-file-replacer": "^0.6.4",
    "@yy/yyl-request": "^0.1.0",
    "@yy/yyl-seed-test-util": "^4.3.6",
    "builtin-modules": "^3.2.0",
    "chai": "^4.3.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.23.1",
    "eslint-config-yyl-react": "^2.0.0",
    "mocha": "^10.0.0",
    "prettier": "^2.0.4",
    "rollup": "^2.38.2",
    "rollup-plugin-node-externals": "^5.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.34.0",
    "typescript": "^4.8.3"
  }
}
