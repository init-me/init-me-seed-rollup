{
  "version": "0.1.0",
  "main": "output/index.js",
  "module": "output/index.esm.js",
  "types": "output/index.d.ts",
  "files": ["output"],
  "eslintConfig": {
    "env": {
      "jest": true
    },
    "extends": [
      "yyl-react"
    ]
  },
  "eslintIgnore": [
    "/node_modules",
    "/output",
    "/test"
  ],
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "quoteProps": "consistent",
    "trailingComma": "none",
    "printWidth": 100
  },
  "jest": {
    "preset": "ts-jest"
  },
  "scripts": {
    "eslint": "eslint --ext=jsx,ts,tsx ./",
    "prettier": "prettier --write ./",
    "dev": "rollup --config ./rollup.config.js --bundleConfigAsCjs",
    "d": "yarn clear && yarn dev",
    "build": "yarn clear && cross-env NODE_ENV=production rollup --config ./rollup.config.js --bundleConfigAsCjs",
    "w": "rollup --watch --config ./rollup.config.js --bundleConfigAsCjs",
    "clear": "rimraf ./output",
    "prepublishOnly": "yarn prettier & yarn build",
    "test": "jest ./test"
  },
  "devDependencies": {
    "@rollup/plugin-buble": "^1.0.1",
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-terser": "^0.3.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.32.0",
    "eslint-config-yyl-react": "^2.0.0",
    "prettier": "^2.8.3",
    "rollup": "^3.10.0",
    "rollup-plugin-typescript2": "^0.34.1",
    "typescript": "^4.9.4",
    "jest": "^29.0.3",
    "ts-jest": "^29.0.1"
  }
}
